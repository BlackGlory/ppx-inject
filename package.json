{
  "name": "ppx-inject",
  "version": "0.3.1",
  "description": "The CLI program that inject Direct access rules into Proxifier's profile.",
  "keywords": [
    "profixier"
  ],
  "bin": "lib/cli.js",
  "files": [
    "lib"
  ],
  "repository": "git@github.com:BlackGlory/ppx-inject.git",
  "author": "BlackGlory <woshenmedoubuzhidao@blackglory.me>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --quiet src __tests__",
    "test": "jest --config jest.config.js",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:coverage": "jest --coverage --config jest.config.js",
    "dev": "ts-node src/index.ts",
    "dev:debug": "node --inspect-brk node_modules/.bin/ts-node src/index.ts",
    "prepublishOnly": "run-s clean build",
    "clean": "rimraf lib",
    "build": "run-s build:*",
    "build:compile": "tsc --project tsconfig.build.json",
    "build:patch": "tscpaths -p tsconfig.build.json -s ./src -o ./lib",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s lint test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@blackglory/structures": "^0.1.14",
    "address-range": "^0.1.0",
    "commander": "^7.2.0",
    "fs-extra": "^9.0.1",
    "immer": "^9.0.1",
    "internet-number": "^2.2.10",
    "iterable-operator": "^0.13.6",
    "nanoid": "^3.1.22",
    "tmp-promise": "^3.0.2",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/fs-extra": "^9.0.10",
    "@types/jest": "^26.0.22",
    "@types/jsbn": "^1.2.29",
    "@types/node": "^14.14.37",
    "@types/tmp": "^0.2.0",
    "@types/xml2js": "^0.4.7",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.24.0",
    "husky": "4",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "standard-version": "^9.2.0",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "tscpaths": "^0.0.9",
    "typescript": "^4.2.4"
  }
}
